{
  "compilerOptions": {
    "strict": false,
    "allowJs": true,
    "checkJs": false,
    "outDir": "./dist",
    "module": "CommonJS",
    "target": "ES6",
    "rootDir": "./",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "include": ["."],
  "exclude": ["node_modules", "dist"]
}
